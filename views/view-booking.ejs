<!DOCTYPE html>
<html>
  <head>
    <%- include("../partials/head")%>
    <title>View Bookings page</title>
  </head>
  <body class = 'wrapper'>
    <%- include("../partials/nav_bar") %>
    <main>
      <div class="container">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>WorkShop Date</th>
            <th>WorkShop Time</th>
            <th>Date Booked</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% bookings.forEach((booking) => { %>
            <tr>
              <td><%= booking.name %></td>
              <td><%= booking.ws_date %></td>
              <td><%= booking.ws_time %></td>
              <td><%= booking.date_booked %></td>
              <td>
                <a href="/view-booking/<%= booking._id %>/edit"  src="../public/images/edit-icon.png">bruh</a>
              </td>

              <!-- Delete button -->  
              <td>  
                <form action="/view-booking/<%= booking._id %>/delete" method="post">
                    <button type="submit">Delete</button>
                </form>
              </td>
            </tr>
            
          <% }); %>
        </tbody>
      </table>
    </div>
    </main>
  </body>
</html>
