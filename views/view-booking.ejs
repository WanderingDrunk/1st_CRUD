<!DOCTYPE html>
<html>
  <head>
    <%- include("../partials/head")%>
    <title>View Bookings page</title>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
  </head>
  <body class = 'wrapper'>
    <%- include("../partials/nav_bar") %>
    <main>
      <div class="container">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>WorkShop Date</th>
            <th>WorkShop Time</th>
            <th>Date Booked</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% bookings.forEach((booking) => { %>
            <tr>
              <td><%= booking.name %></td>
              <td><%= booking.ws_date %></td>
              <td><%= booking.ws_time %></td>
              <td><%= booking.date_booked %></td>
              <td><a href="/view-booking/<%= booking._id %>/edit" class="edit-button" >Edit</a></td>
              <td><a class="delete-button"><i class="fuck">asdf</i></a></td>
            </tr>
            
          <% }); %>
        </tbody>
      </table>
    </div>
    </main>
  </body>
</html>

